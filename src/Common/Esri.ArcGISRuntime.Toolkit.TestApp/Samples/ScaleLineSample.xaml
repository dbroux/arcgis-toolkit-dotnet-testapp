                                                   VerticalAlignment="Stretch"
                                                   Stroke="{TemplateBinding Foreground}" />

                                        <!--  Values  -->
                                        <TextBlock Grid.Column="0"
                                                   Width="100"
                                                   Margin="-50,2,-50,2"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center"
                                                   Text="0"
                                                   TextAlignment="Center" />
                                        <TextBlock Grid.Column="2"
                                                   Width="100"
                                                   Margin="-50,0,-50,0"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center"
                                                   Text="{Binding Text, ElementName=MetricValue, Converter={StaticResource multiplicationConverter}, ConverterParameter=0.2}"
                                                   TextAlignment="Center" />
                                        <TextBlock Grid.Column="5"
                                                   Width="100"
                                                   Margin="-50,0,-50,0"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center"
                                                   Text="{Binding Text, ElementName=MetricValue, Converter={StaticResource multiplicationConverter}, ConverterParameter=0.5}"
                                                   TextAlignment="Center" />
