                                                Width="1"
                                                HorizontalAlignment="Left"
                                                BorderBrush="{TemplateBinding Foreground}"
                                                BorderThickness="1" />
                                        <Border Grid.Row="2"
                                                Grid.Column="3"
                                                Width="1"
                                                HorizontalAlignment="Left"
                                                BorderBrush="{TemplateBinding Foreground}"
                                                BorderThickness="1" />
                                        <Border Grid.Row="2"
                                                Grid.Column="4"
